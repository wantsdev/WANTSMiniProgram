/* pages/WNTSCreatAddress/WNTSCreatAddress.wxss */

.view-parent {
  width: 710rpx;
  display: flex;
  flex-direction: column;
  border-left: 20rpx solid #fcfcfc;
  border-right: 20rpx solid #fcfcfc;
  border-top: 10rpx solid #fcfcfc;
  border-bottom: 20rpx solid #fcfcfc;
}

.add_item {
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  height: 94rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 15px;
  flex-direction: row;
  align-items: center;
}

.item_text {
  font-size: 32rpx;
  color: #484649;
}

.item_province {
  font-size: 32rpx;
  width: 520rpx;
  height: 94rpx;
  color: #898989;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 15rpx;
}

.item_input {
  margin-top: 2rpx;
  margin-left: 15rpx;
  color: #898989;
  font-size: 30rpx;
  width: 410rpx;
}

.item_input_1 {
  margin-top: 2rpx;
  margin-left: 15rpx;
  color: #898989;
  font-size: 30rpx;
  width: 450rpx;
}

.item_picker {
  margin-left: 15px;
}

.picker {
  padding-top: 1px;
  padding-left: 61px;
  color: lightskyblue;
}

.add_address {
  width: 646rpx;
  margin-top: 30rpx;
  background: #333;
  height: 80rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  margin-left: 52rpx;
}

.addressSelect {
  width: 102rpx;
  height: 100rpx;
  align-items: center;
  position: absolute;
  right: 50rpx;
}

.add {
  color: white;
  text-align: center;
  font-size: 32rpx;
  line-height: 44rpx;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.3);
}

.picker-view {
  width: 100%;
  display: flex;
  z-index: 12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
  font-size: 28rpx;
  color: #484649;
}

.opreation-text {
  font-size: 32rpx;
  color: #484649;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
