/*地址栏父空间  */

.address-layout {
  width: 710rpx;
  display: flex;
  flex-direction: row;
  height: 178rpx;
  background: #fcfcfc;
  border-left: 20rpx solid #fff;
  border-right: 20rpx solid #fff;
  border-bottom: 20rpx solid #fff;
}

.image-location {
  width: 32rpx;
  height: 41rpx;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 68rpx;
}

.address-layout2 {
  width: 608rpx;
  background: #fcfcfc;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
