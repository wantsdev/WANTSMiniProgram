.goods-desc {
  height: 162rpx;
  width: 498rpx;
  flex-direction: column;
  display: flex;
}

.goods-title {
  display: -webkit-box;
  font-size: 26rpx;
  color: #484649;
  margin-right: 116rpx;
  margin-left: 20rpx;
  line-height: 28rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
