  width: 710rpx;
  height: 78rpx;
  background: #fcfcfc;
  align-items: center;
  border-left: 20rpx solid #fff;
  border-right: 20rpx solid #fff;
}

.seller-iamge {
  width: 26rpx;
  height: 24rpx;
  margin-left: 30rpx;
}

.seller-title-name {
  font-size: 28rpx;
  color: #484649;
  margin-left: 30rpx;
}

.seller-status {
  display: block;
  color: #ffc700;
  font-size: 28rpx;
  position: absolute;
  right: 50rpx;
