.personinfo_parent {
  width: 710rpx;
  height: 406rpx;
  border-left: 20rpx solid #fcfcfc;
  border-right: 20rpx solid #fcfcfc;
  border-top: 10rpx solid #fcfcfc;
  border-bottom: 30rpx solid #fcfcfc;
}

/*头像*/

.person_head {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background: white;
  border-bottom: 1rpx solid #f5f5f5;
}

.head_tips {
  display: block;
  font-size: 28rpx;
  color: #484648;
  margin-left: 30rpx;
}

.head_icon {
  display: block;
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  border-radius: 68rpx;
  background: white;
  margin-right: 10rpx;
  right: 50rpx;
}

