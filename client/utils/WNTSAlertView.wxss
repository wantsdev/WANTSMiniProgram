.show-btn {
  margin-top: 100rpx;
  color: #fff;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 550rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 24rpx;
}

.modal-title {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 36rpx;
  color: #333;
  text-align: center;
}

.modal-content {
  text-align: center;
  font-size: 36rpx;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 2px solid #f5f5f5;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #484649;
  text-align: center;
  border-right: 2px solid #f5f5f5;
  font-size: 32rpx;
}

.btn-confirm {
  width: 50%;
  color: #484649;
  text-align: center;
  font-size: 32rpx;
}

.hide {
  display: none;
}
